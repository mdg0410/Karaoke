@{
    ViewData["Title"] = "Página de Inicio";
}

<div class="container mt-5" style="padding: 0 4vh 10vh 4vh;">

    <!-- Título principal -->
    <div class="text-center my-4">
        <h1 class="display-4 fw-bold" style="color: #B8860B;">Bienvenido a Karaoke Karibu</h1>
        <p class="lead" style="color: #DCDCDC;">Vive la experiencia única de karaoke con un toque exclusivo.</p>
    </div>

    <!-- Bloques de contenido -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Bloque Menú -->
        <div class="col">
            <div class="card h-100 text-center" style="background-color: #121212; border: 1px solid #B8860B;">
                <div class="card-body">
                    <h2 class="card-title" style="color: #B8860B;">Menú</h2>
                    <p class="card-text" style="color: #DCDCDC;">Descubre nuestras bebidas y snacks para acompañar tu noche.</p>
                </div>
                <div class="card-footer" style="background-color: #121212; border-top: 1px solid #DCDCDC;">
                    <a href="Home/MenuProductos" class="btn btn-outline-light btn-sm" style="border-color: #B8860B; color: #B8860B;">Explorar Menú</a>
                </div>
            </div>
        </div>

        <!-- Bloque Cancionero -->
        <div class="col">
            <div class="card h-100 text-center" style="background-color: #121212; border: 1px solid #B8860B;">
                <div class="card-body">
                    <h2 class="card-title" style="color: #B8860B;">Cancionero</h2>
                    <p class="card-text" style="color: #DCDCDC;">Explora nuestra lista de canciones y prepárate para cantar.</p>
                </div>
                <div class="card-footer" style="background-color: #121212; border-top: 1px solid #DCDCDC;">
                    <a href="Home/Cancionero" class="btn btn-outline-light btn-sm" style="border-color: #B8860B; color: #B8860B;">Ver Cancionero</a>
                </div>
            </div>
        </div>

        <!-- Bloque Karaoke -->
        <div class="col">
            <div class="card h-100 text-center" style="background-color: #121212; border: 1px solid #B8860B;">
                <div class="card-body">
                    <h2 class="card-title" style="color: #B8860B;">Karaoke</h2>
                    <p class="card-text" style="color: #DCDCDC;">Disfruta de una noche llena de diversión con nuestras sesiones de karaoke.</p>
                </div>
                <div class="card-footer" style="background-color: #121212; border-top: 1px solid #DCDCDC;">
                    <a href="Home/Karaoke" class="btn btn-outline-light btn-sm" style="border-color: #B8860B; color: #B8860B;">Ir al Karaoke</a>
                </div>
            </div>
        </div>
    </div>
</div>
